# GraphSense Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# REPOSITORY CONFIGURATION
# =============================================================================

# Local path to repository to analyze (required)
# Must be an absolute path to a directory containing a git repository
REPO_PATH=/path/to/local/repository


# =============================================================================
# API KEYS
# =============================================================================

# Google Generative AI API Key (required for Gemini models)
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY=your_google_api_key_here

# Anthropic API Key (required for Claude models)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cohere API Key (optional)
# Get from: https://dashboard.cohere.ai/api-keys
CO_API_KEY=your_cohere_api_key_here

# Pinecone API Key (optional)
# Get from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment mode (development, production)
NODE_ENV=production

# Application port
PORT=8080

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Whether to rebuild the index from scratch on startup
INDEX_FROM_SCRATCH=false

# Debug mode (optional)
DEBUG=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Configuration
POSTGRES_DB=graphsense
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Neo4j Configuration
NEO4J_AUTH=none
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS origin (use * for development, specific domains for production)
CORS_ORIGIN=*

# Rate limiting configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================

# Uncomment and modify these for development
# NODE_ENV=development
# LOG_LEVEL=debug
# INDEX_FROM_SCRATCH=true
# PORT=3000
# POSTGRES_PORT=5433
# NEO4J_HTTP_PORT=7475
# NEO4J_BOLT_PORT=7688

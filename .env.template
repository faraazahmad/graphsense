# Environment Variables Template
# Copy this file to .env and fill in the actual values

# ================================
# REQUIRED ENVIRONMENT VARIABLES
# ================================

# Repository Configuration
REPO_URI=git@github.com:your-org/your-repo.git
HOME=/home/your-user

# API Keys for AI Services
GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CO_API_KEY=your-cohere-api-key-here

# Vector Database
PINECONE_API_KEY=your-pinecone-api-key-here

# ================================
# OPTIONAL ENVIRONMENT VARIABLES
# ================================

# GitHub Personal Access Token (required for private repos)
GITHUB_PAT=your-github-personal-access-token

# Neo4j Configuration (if using custom Neo4j instance)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Application Configuration
NODE_ENV=development
PORT=8080
LOG_LEVEL=info

# PostgreSQL Configuration (if using custom PostgreSQL instance)
DATABASE_URL=postgresql://user:password@localhost:5432/database

# ================================
# DOCKER ENVIRONMENT VARIABLES
# ================================

# Neo4j Docker Configuration
NEO4J_AUTH=none
# Alternative: NEO4J_AUTH=neo4j/your-password

# ================================
# DEVELOPMENT ENVIRONMENT VARIABLES
# ================================

# Set to true to rebuild the knowledge graph from scratch
INDEX_FROM_SCRATCH=false

# Enable debug logging for specific modules
DEBUG=graphsense:*

# Hot reload configuration
WATCH_FILES=true

# ================================
# PRODUCTION ENVIRONMENT VARIABLES
# ================================

# Set to production for optimized builds
NODE_ENV=production

# Disable debug logging in production
DEBUG=

# Security settings
CORS_ORIGIN=https://your-frontend-domain.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Health check configuration
HEALTH_CHECK_TIMEOUT=5000
